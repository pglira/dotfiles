" This file should contain a subset of my .vimrc

let mapleader ="\<Space>"

nnoremap <C-k> 5k
nnoremap <C-j> 5j
vnoremap <C-k> 5k
vnoremap <C-j> 5j

map Y y$

set scrolloff=1000
set ignorecase
set smartcase
set hlsearch
set incsearch

" Relative numbers
set relativenumber
nnoremap <C-e> :set relativenumber!<CR>

" Plugins
set surround
set easymotion
map <leader>jj <Plug>(easymotion-bd-f)
